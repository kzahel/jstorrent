{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": {
      "@jstorrent/engine/*": ["./packages/engine/src/*"],
      "@jstorrent/engine": ["./packages/engine/src/index.ts"],
      "@jstorrent/client/*": ["./packages/client/src/*"],
      "@jstorrent/client": ["./packages/client/src/index.ts"],
      "@jstorrent/ui/*": ["./packages/ui/src/*"],
      "@jstorrent/ui": ["./packages/ui/src/index.ts"],
      "@jstorrent/ui/styles.css": ["./packages/ui/src/styles.css"]
    }
  }
}
