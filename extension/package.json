{
  "name": "jstorrent-extension",
  "version": "0.0.1",
  "description": "JSTorrent MV3 Extension",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:extension dev:web",
    "dev:extension": "vite build --watch",
    "dev:web": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test -c e2e/playwright.config.ts",
    "test:real": "echo 'Real E2E not implemented yet'",
    "check_fast": "npm-run-all --parallel typecheck test"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/react": "^14.1.0",
    "@types/chrome": "^0.1.31",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^5.1.1",
    "happy-dom": "^20.0.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  }
}
