{
  "manifest_version": 3,
  "name": "JSTorrent Extension",
  "version": "0.0.1",
  "description": "JSTorrent MV3 Extension",
  "permissions": [
    "nativeMessaging",
    "storage",
    "notifications",
    "power",
    "storage",
    "unlimitedStorage",
    "tabs"
  ],
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/ui/app.html"
  },
  "icons": {
    "16": "icons/js-16.png",
    "32": "icons/js-32.png",
    "128": "icons/js-128.png"
  },
  "externally_connectable": {
    "matches": [
      "https://new.jstorrent.com/*",
      "https://jstorrent.com/*",
      "http://local.jstorrent.com:3000/*"
    ]
  }
}
