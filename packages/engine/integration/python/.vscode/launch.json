{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Python test (current file)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Python test + Node.js (current file)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_INSPECT": "true"
            }
        },
        {
            "name": "Run all tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_tests.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Attach to Node.js (JSTEngine)",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Debug Python + TypeScript (compound)",
            "configurations": [
                "Debug Python test + Node.js (current file)",
                "Attach to Node.js (JSTEngine)"
            ],
            "stopAll": true
        }
    ]
}
