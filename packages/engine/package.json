{
  "name": "@jstorrent/engine",
  "version": "0.0.1",
  "description": "Core BitTorrent engine for JSTorrent",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "postinstall": "[ -f src/geo/ipv4-country-data.ts ] || cp src/geo/ipv4-country-data.stub.ts src/geo/ipv4-country-data.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:daemon": "vitest run --config vitest.daemon.config.ts",
    "test:python": "cd integration/python && python run_tests.py",
    "test:all": "vitest run && vitest run --config vitest.daemon.config.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "download-memory": "node --import tsx scripts/download_memory.ts",
    "download-null": "node --import tsx scripts/download_null.ts"
  },
  "keywords": [
    "bittorrent",
    "torrent",
    "p2p"
  ],
  "author": "JSTorrent Team",
  "license": "MIT",
  "dependencies": {
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
