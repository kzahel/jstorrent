{
  "name": "@jstorrent/engine",
  "version": "0.1.0",
  "description": "Core BitTorrent engine for JSTorrent",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters/android": {
      "types": "./dist/adapters/android/index.d.ts",
      "import": "./dist/adapters/android/index.js"
    },
    "./adapters/daemon/control-connection": {
      "types": "./dist/adapters/daemon/control-connection.d.ts",
      "import": "./dist/adapters/daemon/control-connection.js"
    },
    "./adapters/native": {
      "types": "./dist/adapters/native/index.d.ts",
      "import": "./dist/adapters/native/index.js"
    },
    "./presets/native": {
      "types": "./dist/presets/native.d.ts",
      "import": "./dist/presets/native.js"
    }
  },
  "scripts": {
    "postinstall": "[ -f src/geo/ipv4-country-data.ts ] || cp src/geo/ipv4-country-data.stub.ts src/geo/ipv4-country-data.ts",
    "build": "tsc",
    "bundle:native": "node bundle/build-native.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:daemon": "vitest run --config vitest.daemon.config.ts",
    "test:python": "cd integration/python && uv run python run_tests.py",
    "test:all": "vitest run && vitest run --config vitest.daemon.config.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --project tsconfig.test.json",
    "download-memory": "node --import tsx scripts/download_memory.ts",
    "download-null": "node --import tsx scripts/download_null.ts"
  },
  "keywords": [
    "bittorrent",
    "torrent",
    "p2p"
  ],
  "author": "JSTorrent Team",
  "license": "MIT",
  "dependencies": {
    "bn.js": "^5.2.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/node": "^20.10.0",
    "esbuild": "^0.24.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
