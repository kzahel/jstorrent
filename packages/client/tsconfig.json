{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "../..",
    "paths": {
      "@jstorrent/engine/*": ["./packages/engine/src/*"],
      "@jstorrent/engine": ["./packages/engine/src/index.ts"],
      "@jstorrent/ui/*": ["./packages/ui/src/*"],
      "@jstorrent/ui": ["./packages/ui/src/index.ts"],
