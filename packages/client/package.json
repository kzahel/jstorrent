{
  "name": "@jstorrent/client",
  "version": "0.0.1",
  "description": "JSTorrent client adapters and React integration",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./android": {
      "types": "./dist/android.d.ts",
      "import": "./dist/android.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@jstorrent/engine": "workspace:*",
    "@jstorrent/ui": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.31",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "typescript": "^5.2.2"
  }
}
